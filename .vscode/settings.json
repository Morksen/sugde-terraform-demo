{
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "files.associations": {
    "*.tfvars": "terraform",
    "*.tfbackend": "terraform"
  },
  "[terraform]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "hashicorp.terraform",
    "editor.tabSize": 2 // optionally
  },
  "[terraform-vars]": {
    "editor.tabSize": 2 // optionally
  }
}
